@model Rebusjakt.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Glömt ditt lösenord?";
}
<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">Glömt ditt lösenord?</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="content-sub-heading">Skriv in din e-postadress eller ditt användarnamn</h2>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>E-post eller användarnamn</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-default" })
                    </div>
                </div>
            </div>
            <div class="form-group-btn">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <input type="submit" value="Skicka återställningslänk" class="btn btn-blue" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
