@model Rebusjakt.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Återställ lösenord";
}
<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">Återställ lösenord</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>E-post</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-default" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>Lösenord</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-default" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>Bekräfta lösenord</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-default" })
                    </div>
                </div>
            </div>
            <div class="form-group-btn">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <input type="submit" value="Återställ" class="btn btn-blue" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
