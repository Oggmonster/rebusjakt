@model Rebusjakt.ViewModels.MyChallengesViewModel
@{
    ViewBag.Title = "Utmaningar";
}

<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">Utmaningar</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        <div id="challenge-result"></div>
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <h2 class="content-sub-heading">Där du har blivit utmanad</h2>
                <div id="my-challenged"></div>
            </div>
            <div class="col-lg-6 col-md-6">
                <h2 class="content-sub-heading">Startade av dig</h2>
                <div id="my-challenges"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/challengeview")
    <script>
        React.render(React.createElement(ChallengedApp, {data : @Html.Raw(Json.Encode(Model.Challenged))}), document.getElementById("my-challenged"));
        React.render(React.createElement(ChallengerApp, {data : @Html.Raw(Json.Encode(Model.Created))}), document.getElementById("my-challenges"));
    </script>
}
