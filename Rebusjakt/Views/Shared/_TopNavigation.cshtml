<nav class="menu menu-right" id="profile">
    <div class="menu-scroll">
        <div class="menu-wrap">
            <div class="menu-top">
                <div class="menu-top-img">
                    <img alt="John Smith" src="/images/samples/landscape.jpg">
                </div>
                <div class="menu-top-info">
                    <a class="menu-top-user" href="javascript:void(0)"><span class="avatar pull-left"><img alt="Användarbild" src="/images/users/avatar-001.jpg"></span> @User.Identity.GetUserName()</a>
                </div>
            </div>
            <div class="menu-content">
                <ul class="nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Inställningar", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Inställningar" })
                            <a href="javascript:void(0)"><span class="icon icon-account-box"></span>Profile Settings</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)"><span class="icon icon-add-to-photos"></span>Upload Photo</a>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()"><span class="icon icon-exit-to-app"></span> Logga ut</a>
                            }
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Ny användare", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Logga in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    }
                </ul>

            </div>
        </div>
    </div>
</nav>
<div class="menu menu-right menu-search" id="search">
