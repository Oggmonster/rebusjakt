@model Rebusjakt.ViewModels.HuntViewModel
@{
    ViewBag.Title = Model.HuntName;
}

<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">@Model.HuntName</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        <div id="game-container"></div>
        <div id="content-container"></div>
    </div>
</div>

@section scripts {
    <script>
        var huntData = @Html.Raw(Json.Encode(Model));
    </script>
    <script src="//maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script src="/js/gamemaster.js"></script>
    <script src="~/ReactComponents/GoogleMap.jsx"></script>
    <script src="~/ReactComponents/TrueOrFalseGuesser.jsx"></script>
    <script src="~/ReactComponents/TextGuesser.jsx"></script>
    <script src="~/ReactComponents/NumberGuesser.jsx"></script>
    <script src="~/ReactComponents/MultiGuesser.jsx"></script>
    <script src="~/ReactComponents/LocationChecker.jsx"></script>
    <script src="~/ReactComponents/RiddleGuesser.jsx"></script>
    <script src="~/ReactComponents/QuestionGuesser.jsx"></script>
    <script src="~/ReactComponents/GameApp.jsx"></script>
}

