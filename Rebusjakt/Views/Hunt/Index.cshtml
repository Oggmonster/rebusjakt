@model IEnumerable<Rebusjakt.Models.Hunt>
@{
    ViewBag.Title = "Index";
}
<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">Admin</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">       
        <p>
            <a href="/hunt/create" class="btn btn-blue" title="Ny Jakt">Ny jakt</a>
        </p>
        <div class="tile-wrap">
            @foreach (var item in Model)
            {
                <div class="tile">
                    <div class="tile-action tile-action-show">
                        <ul class="nav nav-list pull-right">
                            <li>
                                <a href="/hunt/edit/@item.Id"><span class="access-hide">Add</span><span class="icon icon-edit"></span></a>
                            </li>
                            <li>
                                <a href="/hunt/delete/@item.Id"><span class="access-hide">Ta bort</span><span class="icon icon-delete"></span></a>
                            </li>
                        </ul>
                    </div>
                    <div class="tile-inner">
                        <a class="text-overflow" href="/riddleadmin/index/@item.Id">@item.Name</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

