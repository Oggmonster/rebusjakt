@model Rebusjakt.ViewModels.HuntIndexViewModel
@{
    ViewBag.Title = Model.Hunt.Name;
}

<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">@Model.Hunt.Name</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        <div class="card-wrap">
            <div class="card">
                <div class="card-inner">                    
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <p>
                                @Model.Hunt.Description
                            </p>
                            <p>
                                <span class="icon icon-place text-green"></span> Startar vid: @Model.Hunt.StartLocation
                            </p>
                            <p>
                                <span class="icon icon-label text-green"></span> Tema: @Model.Hunt.Theme
                            </p>
                            <p>
                                <span class="icon icon-timer text-green"></span> Tidsgräns: @Model.Hunt.TimeLimit minuter
                            </p>
                            <p>
                                <span class="icon icon-person text-green"></span> Skapad av: <a href="@Model.CreatorUrl" title="@Model.Creator">@Model.Creator</a>
                            </p>
                            <p>Vi rekommenderar att du befinner dig vid startpunkten innan du startar jakten.</p>
                            <p>
                                <a class="btn btn-blue" href="/game/index/@Model.Hunt.Id" title="Sätt igång jakten">Sätt igång jakten</a>
                            </p>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            
                            
                            <div id="map-container"></div>
                        </div>
                    </div>
                    
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h3 class="content-sub-heading">Topplista</h3>
                <div class="tile-wrap">
                    @if (Model.TopScores.Count == 0)
                    {
                        <div class="tile">
                            <div class="tile-inner">
                                Ingen har slutfört jakten än.
                            </div>
                        </div>
                    }
                    @foreach (var item in Model.TopScores)
                    {
                        <div class="tile">
                            <div class="pull-left tile-side">
                                <div class="avatar avatar-blue avatar-md">
                                   @(item.Score) p
                                </div>
                            </div>                            
                            <div class="tile-inner">
                                    <a href="@item.UserUrl" title="@item.UserName">@item.UserName</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h3 class="content-sub-heading">Vad tycker deltagarna?</h3>
                <div class="tile-wrap">
                    @if (Model.HuntReviews.Count == 0)
                    {
                        <div class="tile">
                            <div class="tile-inner">Ingen har tyckt något än.</div>
                        </div>
                    }
                    @foreach (var item in Model.HuntReviews)
                    {
                        <div class="tile">
                            @if (item.IsPositive)
                            {
                                <div class="pull-right tile-side">
                                    <div class="avatar avatar-green avatar-md">
                                        <span class="icon icon-thumb-up"></span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="pull-right tile-side">
                                    <div class="avatar avatar-red avatar-md">
                                        <span class="icon icon-thumb-down"></span>
                                    </div>
                                </div>
                            }
                            <div class="tile-inner">
                                    @item.Description<br />
                                    <a href="@item.UserUrl" title="@item.UserName">@item.UserName</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var mapData = {
            lat: @(Model.Hunt.StartLatitude),
            lng: @(Model.Hunt.StartLongitude)
            };
    </script>
    @Scripts.Render("~/bundles/huntview")
}