@using Microsoft.AspNet.Identity
@model Rebusjakt.Models.IndexViewModel
@{
    ViewBag.Title = "Kontoinställningar";
}
<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">Kontoinställningar</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        <h2 class="content-sub-heading">Hej @User.Identity.GetUserName()</h2>
        <p class="text-success">@ViewBag.StatusMessage</p>
        <p>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Ändra lösenord", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
        </p>
    </div>
</div>
