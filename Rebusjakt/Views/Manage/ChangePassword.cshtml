@model Rebusjakt.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Ändra lösenord";
}

<div class="content-heading">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-push-3 col-sm-10 col-sm-push-1">
                <h1 class="heading">Ändra lösenord</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-inner">
    <div class="container">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>Nuvarande lösenord</label>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-default" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>Nytt lösenord</label>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-default" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <label>Bekräfta nytt lösenord</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-default" })
                    </div>
                </div>
            </div>
            <div class="form-group-btn">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-10">
                        <input type="submit" value="Ändra lösenord" class="btn btn-blue" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
